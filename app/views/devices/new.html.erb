<p id="notice"><%= notice %></p>

<h1>New device</h1>

<%= form_for(@device) do |f| %>
  <% if @device.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h2>

      <ul>
      <% @device.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>This form will be filled out with more stuff later.<br/>
    For now, userid is handled in the controller (that<br/>
    never needs to be seen by the user), and there is no<br/>
    stats stuff happening.</p>
  
  <!-- maybe make this a dropdown of all available hives? -->
  <div><%= f.label :hiveid %><br />
  <%= f.text_field :hiveid, :autofocus => true %></div>

  <div><%= f.label :state %><br />
  <%= f.text_field :state %></div>

  <div><%= f.label :version %><br />
  <%= f.text_field :version %></div>

  <div><%= f.label :details %><br />
  <%= f.text_field :details %></div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', devices_path %>
